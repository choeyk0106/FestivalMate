<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#dddddd">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_facebook"
            android:background="@drawable/btn_facebook"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/btn_twitter"
            android:background="@drawable/btn_twitter"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btn_facebook"
            android:layout_toEndOf="@+id/btn_facebook"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/img_homepage"
            android:layout_marginRight="151dp"
            android:layout_marginEnd="151dp"
            android:background="@drawable/img_homepage"
            android:layout_alignTop="@+id/btn_twitter"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공식홈피"
            android:id="@+id/text_homepage"
            android:layout_alignTop="@+id/img_homepage"
            android:layout_alignLeft="@+id/img_homepage"
            android:layout_alignStart="@+id/img_homepage"
            android:textSize="12sp"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:id="@+id/img_ticket_link"
            android:background="@drawable/img_ticket_link"
            android:layout_alignTop="@+id/text_homepage"
            android:layout_toRightOf="@+id/text_homepage"
            android:layout_toEndOf="@+id/text_homepage"
            android:layout_marginLeft="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="티켓링크"
            android:id="@+id/text_ticket_link"
            android:textSize="12sp"
            android:layout_alignTop="@+id/img_ticket_link"
            android:layout_toRightOf="@+id/img_ticket_link"
            android:layout_toEndOf="@+id/img_ticket_link"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>
</LinearLayout>