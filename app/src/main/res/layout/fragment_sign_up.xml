<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    tools:context="com.festival.tacademy.festivalmate.login.SignUpFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/color_toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/toolbar">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/toolbar_title"
        android:layout_gravity="left"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/email_signup"/>

</android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/toolbar">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/textView3"
        android:layout_gravity="center"
        android:textColor="#999999"
        android:textSize="15sp"
        android:text="나만의 프로필 사진을 설정해 주세요."/>

    <ImageView
        android:layout_height="208dp"
        android:layout_width="match_parent"
        android:id="@+id/image_profile"
        android:layout_gravity="center"/>

    <Button
        android:layout_height="67dp"
        android:layout_width="67dp"
        android:background="@drawable/btn_camera"
        android:id="@+id/btn_gallery"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="162dp"
        android:layout_marginRight="6dp"
        style="?android:attr/buttonStyleSmall"/>

</FrameLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/view3"
        android:layout_below="@+id/frameLayout"
        android:layout_marginRight="30dp"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_marginLeft="30dp">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edit_name"
        android:textSize="15sp"
        android:paddingLeft="30dp"
        android:hint="@string/name"/>

</android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/view4"
        android:layout_below="@+id/view3"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edit_email"
        android:textSize="15sp"
        android:paddingLeft="30dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"/>

</android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/view5"
        android:layout_below="@+id/view4"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edit_password"
        android:textSize="15sp"
        android:paddingLeft="30dp"
        android:hint="@string/password"
        android:inputType="textPassword"/>

</android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/view6"
        android:layout_below="@+id/view5"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="@string/re_password">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/edit_re_password"
        android:textSize="15sp"
        android:paddingLeft="30dp"
        android:inputType="textPassword"/>

</android.support.design.widget.TextInputLayout>

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_agree"
        android:layout_below="@+id/view6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_alignStart="@+id/view6"
        android:layout_alignLeft="@+id/view6"
        android:checked="false"/>

    <Button
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@drawable/login_btn_default"
        android:layout_alignParentStart="true"
       android:layout_alignParentLeft="true"
        android:id="@+id/btn_signup"
        android:textColor="#ffffff"
        android:text="@string/signup"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_agree"
        android:textSize="10sp"
        android:text="@string/agree_terms_use_privacy_policy"
        android:layout_toEndOf="@+id/checkBox_agree"
        android:layout_toRightOf="@+id/checkBox_agree"
        android:layout_alignBaseline="@+id/checkBox_agree"/>

</RelativeLayout>