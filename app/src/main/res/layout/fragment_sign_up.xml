<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    tools:context="com.festival.tacademy.festivalmate.login.SignUpFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/color_toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/toolbar">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/toolbar_title"
            android:layout_gravity="left"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/email_signup"/>

    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/toolbar">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/text_ment"
            android:layout_gravity="center"
            android:textColor="#999999"
            android:textSize="15sp"
            android:visibility="visible"
            android:text="나만의 프로필 사진을 설정해 주세요."/>

        <ImageView
            android:scaleType ="centerCrop"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/image_profile"
            android:layout_gravity="center"/>

    </FrameLayout>

    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/checkBox_agree"
        android:layout_marginTop="35dp"
        android:checked="false"
        android:layout_below="@+id/imageView12"
        android:layout_alignLeft="@+id/textView25"
        android:layout_alignStart="@+id/textView25" />

    <Button
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@drawable/login_btn_default"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/btn_signup"
        android:textColor="#ffffff"
        android:text="@string/signup"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/text_agree"
        android:textSize="10sp"
        android:text="@string/agree_terms_use_privacy_policy"
        android:layout_toEndOf="@+id/checkBox_agree"
        android:layout_toRightOf="@+id/checkBox_agree"
        android:layout_alignBaseline="@+id/checkBox_agree"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/name"
        android:id="@+id/textView22"
        android:textColor="@color/color_toolbar"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignLeft="@+id/btn_signup"
        android:layout_alignStart="@+id/btn_signup"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_name"
        android:hint="이름을 입력하세요."
        android:singleLine="true"
        android:inputType="textPersonName"
        android:textSize="12sp"
        android:background="@null"
        android:layout_below="@+id/frameLayout"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_alignStart="@+id/edit_email"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:background="@drawable/text_bottom"
        android:layout_below="@+id/edit_name"
        android:layout_marginLeft="@dimen/text_bottom"
        android:layout_marginRight="@dimen/text_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:id="@+id/textView23"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/color_toolbar"
        android:layout_below="@+id/imageView9"
        android:layout_alignLeft="@+id/btn_signup"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email"
        android:singleLine="true"
        android:background="@null"
        android:textSize="12sp"
        android:inputType="textEmailAddress"
        android:hint="이메일을 입력하세요."
        android:layout_above="@+id/imageView10"
        android:layout_toRightOf="@+id/textView25"
        android:layout_toEndOf="@+id/textView25"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:background="@drawable/text_bottom"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/text_bottom"
        android:layout_marginRight="@dimen/text_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/password"
        android:id="@+id/textView24"
        android:textColor="@color/color_toolbar"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/imageView10"
        android:layout_alignLeft="@+id/textView23"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_password"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textSize="12sp"
        android:singleLine="true"
        android:background="@null"
        android:layout_below="@+id/imageView10"
        android:layout_alignLeft="@+id/edit_email"
        android:layout_alignStart="@+id/edit_email"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView11"
        android:background="@drawable/text_bottom"
        android:layout_below="@+id/edit_password"
        android:layout_marginLeft="@dimen/text_bottom"
        android:layout_marginRight="@dimen/text_bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/re_password"
        android:id="@+id/textView25"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/color_toolbar"
        android:layout_below="@+id/imageView11"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_re_password"
        android:background="@null"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:hint="비밀번호를 재입력하세요."
        android:singleLine="true"
        android:layout_above="@+id/imageView12"
        android:layout_alignLeft="@+id/edit_password"
        android:layout_alignStart="@+id/edit_password" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:background="@drawable/text_bottom"
        android:layout_below="@+id/textView25"
        android:layout_marginLeft="@dimen/text_bottom"
        android:layout_marginRight="@dimen/text_bottom" />

    <Button
        android:layout_height="67dp"
        android:layout_width="67dp"
        android:background="@drawable/btn_camera"
        android:id="@+id/btn_gallery"
        android:layout_gravity="right|bottom"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignBottom="@+id/edit_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

</RelativeLayout>