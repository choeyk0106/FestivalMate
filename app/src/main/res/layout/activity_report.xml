<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context="com.festival.tacademy.festivalmate.MyPage.QuestionActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.Toolbar android:layout_height="?attr/actionBarSize" android:layout_width="match_parent" android:background="@color/color_toolbar" android:layout_alignParentRight="true" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_centerInParent="true" android:id="@+id/toolbar">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/toolbar_title" android:layout_gravity="left" android:textColor="#ffffff" android:textSize="18sp" android:textStyle="bold" android:text="@string/report"/>

</android.support.v7.widget.Toolbar>


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:background="#f5f5f5" android:weightSum="1" android:layout_below="@+id/toolbar" android:orientation="vertical">


    <RelativeLayout android:layout_height="46dp" android:layout_width="match_parent" android:background="#ffffff" android:layout_weight="0.12" android:layout_marginBottom="5dp">

    <android.support.design.widget.TextInputLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/view7" android:layout_centerHorizontal="true"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/textView29" android:textColor="@color/color_toolbar" android:textSize="13sp" android:text="보내는 사람" android:layout_below="@+id/view7" android:layout_marginTop="15dp" android:layout_marginLeft="43dp" android:textStyle="bold"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@null" android:layout_alignParentTop="true" android:id="@+id/editText2" android:textSize="13sp" android:layout_marginTop="15dp" android:layout_marginLeft="17dp" android:layout_toEndOf="@+id/textView29" android:layout_toRightOf="@+id/textView29" android:hint="메일 주소를 입력해주세요."/>

    <ImageView android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@drawable/text_bottom" android:layout_alignParentStart="false" android:layout_alignParentLeft="true" android:id="@+id/imageView18" android:layout_below="@+id/textView29" android:layout_marginLeft="@dimen/text_bottom" android:layout_marginRight="@dimen/text_bottom"/>

</RelativeLayout>


    <RelativeLayout android:layout_height="238dp" android:layout_width="match_parent" android:background="#ffffff" android:layout_marginBottom="34dp" android:layout_marginTop="15dp">

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:background="@null" android:layout_alignParentStart="true" android:layout_alignParentLeft="true" android:id="@+id/edit_input" android:textSize="10sp" android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:hint="@string/question_ment" android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>

    <Button android:layout_height="44dp" android:layout_width="match_parent" android:background="@drawable/login_btn_default" android:id="@+id/btn_quest" android:textColor="#ffffff" android:text="@string/report" android:layout_centerHorizontal="true" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_alignParentBottom="true"/>

</LinearLayout>

</RelativeLayout>