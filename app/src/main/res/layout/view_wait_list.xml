<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="50dp"
        app:riv_oval="true"
        android:layout_height="50dp"
        android:id="@+id/image_photo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:scaleType ="centerCrop"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textSize="10sp"
        android:id="@+id/text_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_photo"
        android:layout_toEndOf="@+id/image_photo"
        android:textColor="#888888"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_title"
        android:layout_below="@+id/text_name"
        android:layout_toRightOf="@+id/image_photo"
        android:layout_toEndOf="@+id/image_photo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3ëª…"
        android:id="@+id/text_people"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_wait_people"
        android:layout_alignTop="@+id/text_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="11sp"
        android:textColor="#f44252"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/cancel_join"
        android:id="@+id/btn_cancel"
        android:textSize="10sp"
        android:textColor="#999999"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"/>

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:id="@+id/imageView6"
        android:background="@drawable/attend_img"
        android:layout_alignBottom="@+id/text_name"
        android:layout_alignTop="@+id/text_name"
        android:layout_toRightOf="@+id/text_name"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>