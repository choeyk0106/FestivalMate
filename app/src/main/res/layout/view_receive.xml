<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/chatting_message"
        android:layout_toRightOf="@+id/image_icon"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/image_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_date"
        android:layout_alignBottom="@+id/chatting_message"
        android:layout_toRightOf="@+id/chatting_message"
        android:layout_toEndOf="@+id/chatting_message" />
</RelativeLayout>