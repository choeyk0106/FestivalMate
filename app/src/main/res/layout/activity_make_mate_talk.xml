<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.festival.tacademy.festivalmate.MateMatching.MakeMateTalkActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:background="@color/color_toolbar">

        <TextView
            android:text="@string/make_talk"
            android:textSize="20dp"
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_gravity="left"
            />
    </android.support.v7.widget.Toolbar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_talk"
        android:id="@+id/btn_maketalk"
        android:background="@color/color_toolbar"
        android:textColor="#ffffff"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="142dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff3300"
        android:text="@string/mate_talk_room_name"
        android:id="@+id/textView15"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_room_name"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignRight="@+id/btn_maketalk"
        android:layout_alignEnd="@+id/btn_maketalk"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:textColor="#ff3300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mate_talk_max_people"
        android:id="@+id/textView16"
        android:layout_alignBottom="@+id/edit_max_size"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_max_size"
        android:inputType="number"
        android:layout_below="@+id/edit_room_name"
        android:layout_toRightOf="@+id/textView16"
        android:layout_alignRight="@+id/edit_room_name"
        android:layout_alignEnd="@+id/edit_room_name" />

    <TextView
        android:textColor="#ff3300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefer_location"
        android:id="@+id/textView17"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_location"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignLeft="@+id/edit_max_size"
        android:layout_alignStart="@+id/edit_max_size"
        android:layout_alignRight="@+id/btn_maketalk"
        android:layout_alignEnd="@+id/btn_maketalk" />

    <TextView
        android:textColor="#ff3300"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prefer_age"
        android:id="@+id/textView18"
        android:layout_below="@+id/spinner_location"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_age"
        android:layout_below="@+id/spinner_location"
        android:layout_alignLeft="@+id/spinner_location"
        android:layout_alignStart="@+id/spinner_location"
        android:layout_alignRight="@+id/btn_maketalk"
        android:layout_alignEnd="@+id/btn_maketalk" />

</RelativeLayout>
